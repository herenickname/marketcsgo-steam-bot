{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "incremental": true,
        "strict": false,
        "moduleResolution": "node",
        "allowJs": true
    },
    "exclude": ["node_modules", "dist", ".git"]
}
